<h1>Blog list</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>
  <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.title %></td>
      <td><%= blog.content %></td>
      <td><%= link_to 'Details', blog_path(blog.id) %></td>
      <td><%= link_to 'Edit', edit_blog_path(blog.id), data: { confirm: 'Are you sure you edit it?' } %></td>
      <td><%= link_to 'Delete', blog_path(blog.id), method: :delete, data: { confirm: 'Are you sure you delete it?' } %></td>
    </tr>
  <% end %>
</table>
